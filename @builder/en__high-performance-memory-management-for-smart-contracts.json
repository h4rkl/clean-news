            "id": "builder-77a849d23a564e5587384268532a1af4",
            "component": {
              "name": "Custom Code",
              "options": {
                "code": "<code>create_signal(page_address: PublicKey, contract: PublicKey)</code>\n",
                "scriptsClientOnly": true
              }
            },
            "responsiveStyles": {
              "large": {
                "display": "flex",
