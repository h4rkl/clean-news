              }
            }
          },
          {
            "@type": "@builder.io/sdk:Element",
            "@version": 2,
            "id": "builder-db3a084bb07f49ce9064573cc0d120d9",
            "component": {
              "name": "Copy",
              "options": {
                "rawHtml": "<h2>The Solana Developer Environment</h2><p>Now let’s look at some of the developer tools on Solana.</p>"
              }
