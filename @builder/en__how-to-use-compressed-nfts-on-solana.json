          {
            "@type": "@builder.io/sdk:Element",
            "@version": 2,
            "id": "builder-655565842c3d4672affc010b73549356",
            "component": {
              "name": "Youtube",
              "options": {
                "url": "https://www.youtube.com/embed/A_U1Nd41vPc"
              }
            },
            "responsiveStyles": {
              "large": {
                "display": "flex",
                "flexDirection": "column",
                "position": "relative",
                "flexShrink": "0",
                "boxSizing": "border-box",
                "marginLeft": "auto",
